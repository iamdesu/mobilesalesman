<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView_splash_activity"
        android:src="@drawable/profesional_icon"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile Salesman"
        android:id="@+id/textView_splash_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView_splash_activity"
        android:layout_toEndOf="@+id/imageView_splash_activity"
        android:textSize="40dp"/>
</RelativeLayout>

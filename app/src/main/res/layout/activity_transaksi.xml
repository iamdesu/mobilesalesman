<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_outlet"
                android:layout_alignParentTop="true"
                android:text="Outlet : "
                android:textSize="24dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Test"
                android:editable="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_card"
            android:background="@drawable/card_shape"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_order"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                android:text="Order"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_order_data"
                android:layout_alignParentRight="true"
                android:textSize="28sp"
                android:text="0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_order_info"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label_order_data"
                android:textSize="12sp"
                android:text="Transaksi"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/retur_card"
            android:layout_marginTop="4dp"
            android:background="@drawable/card_shape"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_retur"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                android:text="Retur"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_retur_data"
                android:layout_alignParentRight="true"
                android:textSize="28sp"
                android:text="0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_retur_info"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label_retur_data"
                android:textSize="12sp"
                android:text="Transaksi"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settlement_card"
            android:layout_marginTop="4dp"
            android:background="@drawable/card_shape"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_settlement"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                android:text="Pelunasan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_settlement_data"
                android:layout_alignParentRight="true"
                android:textSize="28sp"
                android:text="0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_settlement_info"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label_settlement_data"
                android:textSize="12sp"
                android:text="Transaksi"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            style="@style/ButtonTextCenter"
            android:text="@string/btn_summary"
            android:background="@drawable/button_shape"
            android:onClick="onBtnKeluarClick"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_proses"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            style="@style/ButtonTextCenter"
            android:text="@string/btn_proses"
            android:background="@drawable/button_shape"/>

    </LinearLayout>

</LinearLayout>